{
  "name": "pagal-player",
  "version": "0.1.0",
  "description": "A new media player for the world.",
  "main": "app://pagal/index.html",
  "window": {
    "title": "Pagal media player",
    "show": true,
    "toolbar": false,
    "frame": true,
    "position": "center",
    "width": 1080,
    "height": 640,
    "icon": "lib/img/icon.png",
    "min_width": 400,
    "min_height": 50
  },
  "wcjs-prebuilt": {
    "runtime": "nw",
    "runtimeVersion": "v0.12.3",
    "version": "v3.0.0",
    "arch": "ia32"
  },
  "single-instance": true,
  "dependencies": {
    "drag-and-drop-files": "0.0.1",
    "findit": "2.0.0",
    "hotkeys": "1.0.0",
    "imdb-api": "2.2.0",
    "needle": "1.1.2",
    "opensubtitles-api": "3.3.0",
    "ultimate-parser": "0.0.3",
    "wcjs-player": "^6.0.0",
    "wcjs-prebuilt": "^3.0.0",
    "xml2js": "^0.4.17",
    "jquery-ui": "github:jaruba/jquery-ui",
    "xmlbuilder": "^4.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/hlgkb/pagal-player.git"
  },
  "chromium-args": "--d3d9 --disable-d3d11 --gpu-no-context-lost --ignore-gpu-blacklist",
  "author": "pagal <bibash1270@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-jshint": "^2.0.1",
    "gulp-jslint": "^1.0.5",
    "gulp-minify": "0.0.14",
    "gulp-uglify": "^2.0.0",
    "gulp-util": "^3.0.7",
    "jshint": "^2.9.3",
    "jshint-stylish": "^2.2.1"
  }
}
